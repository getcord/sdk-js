{
  "name": "cord-sdk",
  "version": "0.0.11",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "tsc-packages": "for package in packages/*/; do echo \"Checking package: ${package}\" && tsc --noEmit -p \"${package}\" || exit 1; done"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "glob": "^7.2.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-copy": "^3.4.0",
    "yargs": "^17.4.0"
  }
}
