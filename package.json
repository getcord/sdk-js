{
  "name": "cord-sdk",
  "version": "1.13.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "tsc-packages": "for package in packages/*/; do echo \"Checking package: ${package}\" && tsc --noEmit -p \"${package}\" || exit 1; done",
    "test": "cd packages/types && npm run test"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "@types/node": "^20.2.3",
    "@vanilla-extract/css": "^1.10.0",
    "glob": "^7.2.0",
    "prettier": "^2.8.2",
    "rollup": "^2.70.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-re": "^1.0.7",
    "typescript": "~5.1.6",
    "yargs": "^17.4.0"
  }
}
